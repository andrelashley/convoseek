@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    label {
        display: block;
        text-align: left;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }
</style>

<div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="text-center mt-5 w-50">
        <h2 class="mb-4">Login</h2>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <form class="mt-3" asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="email">Email Address</label>
                <input asp-for="Email" id="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group mb-3">
                <label for="password">Password</label>
                <div class="input-group">
                    <input asp-for="Password" id="password" type="password" class="form-control" placeholder="Enter your password">
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">👁</button>
                </div>
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary mt-3 w-100">Login</button>
        </form>
        <p class="mt-3 mb-5">Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up</a>.</p>
    </div>
</div>

<script>
    function togglePasswordVisibility() {
        const passwordField = document.getElementById("password");
        passwordField.type = passwordField.type === "password" ? "text" : "password";
    }
</script>
